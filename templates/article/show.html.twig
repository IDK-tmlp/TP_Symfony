{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
	<div class='d-flex justify-content-center gap-4'>
		<a href="{{ path('app_article_index') }}" class="btn btn-primary">Back to list</a>
		<h1>Articles</h1>
		<a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-primary">Edit</a>
	</div>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ article.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ article.title }}</td>
			</tr>
			<tr>
				<th>Text</th>
				<td>{{ article.text }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td><img src='http://127.0.0.1:8000/uploads/images/{{ article.image }}' alt="articleCover" width='200px' height='200px' /></td>
			</tr>
			<tr>
				<th>Commentaire</th>
				<td>
					<ul class="list-group list-group-flush">
						{% for comment in comments %}
							{% if comment.isValidated %}
								<li class="list-group-item">
									<div class="card-body">
										<blockquote class="blockquote mb-0">
											<p>{{ comment.text }}</p>
											<footer class="blockquote-footer"><cite title="{{ comment.username }}">{{ comment.username }}</cite> </footer>
										</blockquote>
									</div>
								</li>
							{% endif %}
						{% else %}
							No articles
						{% endfor %}
					</ul>
					{% if previous >= 0 %}
						<a class="btn btn-sm btn-primary" href="{{ path('app_article_show', { id: article.id, offset: previous }) }}">Précédent</a>
					{% endif %}
					Il y a {{ comments|length~' commentaire'~( comments|length > 1 ? 's' : '') }}
					{% if next < comments|length %}
						<a class="btn btn-sm btn-primary" href="{{ path('app_article_show', { id: article.id, offset: next }) }}">Suivant</a>
					{% endif %}
				</td>
			</tr>
		</tbody>
	</table>
	{% if app.user %}
		<a href="{{ path('app_comment_new_with_id', {'id': article.id}) }}) }}" class="btn btn-primary">Leave a comment</a>
	{% else %}
		<a href="{{ path('app_login') }}" class="btn border">Log in to leave a comment</a>
	{% endif %}

	{{ include('article/_delete_form.html.twig') }}
{% endblock %}
