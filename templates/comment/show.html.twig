{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ comment.username }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ comment.text }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ comment.note }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_comment_index') }}" class="btn btn-primary">Back to list</a>

    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}" class="btn btn-primary">Edit</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
