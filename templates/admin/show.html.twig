{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <h1>Admin</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ admin.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ admin.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ admin.roles ? admin.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ admin.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_index') }}" class="btn btn-primary">Back to list</a>

    <a href="{{ path('app_admin_edit', {'id': admin.id}) }}" class="btn btn-primary">Edit</a>

    {{ include('admin/_delete_form.html.twig') }}
{% endblock %}
